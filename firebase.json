{
  "dataconnect": {
    "source": "dataconnect"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules",
    "target": "thermoterswebsite.appspot.com"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "runtime": "python312",
    "timeout": "540s",
    "availableMemory": "2Gi",
    "port": 8080,
    "maxInstances": 3,
    "labels": {
      "deployment-tool": "firebase-cli"
    },
    "auth": {
      "blockingFunctions": {
        "beforeUserCreated": "create_user_document"
      }
    },
    "codebase": "default",
    "ignore": [
      "venv",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  }
}
